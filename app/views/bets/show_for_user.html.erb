<h1>Listing users bets</h1>

<table>
  <tr>
    <th>User</th>
    <th>Subject</th>
    <th>Reward</th>
    <th>Date</th>
    <th>Due date</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.user.full_name %></td>
    <td><%= bet.subject %></td>
    <td><%= bet.reward %></td>
    <td><%= bet.created_at %></td>
    <td><%= bet.due_date %></td>
    <td><%= bet.state %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

