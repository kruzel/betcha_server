<h1>Listing badge_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @badge_types.each do |badge_type| %>
  <tr>
    <td><%= badge_type.name %></td>
     <td><%= image_tag badge_type.image %></td>
    <td><%= link_to 'Show', badge_type %></td>
    <td><%= link_to 'Edit', edit_badge_type_path(badge_type) %></td>
    <td><%= link_to 'Destroy', badge_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

